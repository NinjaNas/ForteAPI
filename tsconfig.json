{
	"ts-node": {
		"files": true
	},
	"files": ["src/index.ts", "types/global.d.ts"],
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"exclude": ["./node_modules/", "./dist/", "tests/**/*.ts"],
	"include": ["src/**/*.ts", "types/**/*.d.ts"]
	// "include": ["src/**/*.ts", "types/**/*.d.ts", "tests/**/*.ts"] for dev
}
